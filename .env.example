# Google Maps API key used to retrieve live traffic data
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email configuration (optional - only required when enabling email alerts)
# Use your Gmail send endpoint and OAuth token when sending through Gmail.
EMAIL_FROM=alerts@example.com
EMAIL_API_URL=https://gmail.googleapis.com/gmail/v1/users/me/messages/send
EMAIL_API_KEY=your-gmail-access-token
EMAIL_OAUTH_REFRESH_TOKEN=your-gmail-refresh-token
EMAIL_OAUTH_CLIENT_ID=your-gmail-client-id
EMAIL_OAUTH_CLIENT_SECRET=your-gmail-client-secret
# Optional override if you are using a non-Google OAuth provider
EMAIL_OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
